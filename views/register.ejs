<!DOCTYPE html>
<html>
  <head>
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Plymouth-ChatRoom</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.bootcss.com/jquery/3.4.1/jquery.min.js"></script>
  </head>
  <body class="container-public">
    <div class="container-fluid">
      <form id="form" role="form" onsubmit="return false;" class="col-sm-offset-4 col-sm-3">
        <div class="panel panel-default box-shadow-public">
          <div class="panel-heading">
            <p>Plymouth-ChatRoom -- register</p>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <div class="input-group">
                <p class=" input-group-addon  ">
                  <span class=" glyphicon glyphicon-user"></span>
                </p>
                <input type="text" class="form-control" id="username" placeholder="user name" />
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <p class=" input-group-addon  ">
                  <span class="glyphicon  glyphicon-lock"></span>
                </p>
                <input type="password" class="form-control" id="password" placeholder="Password" />
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <p class=" input-group-addon  ">
                  <span class="glyphicon  glyphicon-pencil"></span>
                </p>
                <input type="password" class="form-control" id="rePassword" placeholder="Password again" />
              </div>
            </div>
            <div class="form-group text-right">
              <button class="btn btn-primary" id="register">Register</button>
              <button class="btn btn-default" id="return">Return</button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script>
      $('#return').on({
        click: function() {
          location.href = '/users/login'
        }
      })
      $('#register').on({
        click: function() {
          var username = $('#username').val()
          var password = $('#password').val()
          var rePassowrd = $('#rePassword').val()
          if (username == '') {
            alert('Please fill in the user name!')
            return false
          }
          var reg = /^[a-z0-9_-]{6,18}$/
          if (!reg.test(password)) {
            alert('Please fill in the 6-12 digit passwordÔºÅ')
            return false
          }

          if (password !== rePassowrd) {
            alert('The passwords do not match!')
            return false
          }

          $.post(
            '/users/signUp',
            { username: username, password: password },
            function(res) {
              if (res.success == 1) {
                location.href = '/users/login'
              } else {
                alert(res.message)
              }
            },
            'json'
          )
        }
      })
    </script>
  </body>
</html>
